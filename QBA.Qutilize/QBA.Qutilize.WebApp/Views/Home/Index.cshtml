@model QBA.Qutilize.WebApp.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Shared/_CMSPublic.cshtml";
}

<div class="sidenav">
    <div class="login-main-text">

        <h1>Project management, as effective as it gets.</h1>
        <p>Qutilize is a cloud-based tool that helps you plan your work, track it efficiently, and collaborate with your team wherever they are.</p>

        <img src="~/images/Qutilize_SM.png" class="img-responsive" alt=":Logo" />

    </div>
</div>
<div class="main">

    <div class="col-md-10">
        
        <div class="login-form">
            

            <h1>Login to continue</h1>

            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">


                    @Html.LabelFor(m => m.UserID, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">


                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                </div>

                <div class="form-group">

                    <input type="submit" value="Log in" class="btn btn-default" />
                    @*<a href="/Account/ForgotPassword" class="btn btn-default">Forgot Password</a>*@
                    @*<a href="/Account/Registration" class="btn btn-default">New User Registration</a>*@
                </div>
            }
            @{
                string strMSG = string.Empty;
                string strStyle = string.Empty;
                strMSG = ViewBag.ErrStatus;
                if (strMSG != null)
                {
                    strStyle = "display:inline";
                }
                else
                {
                    strStyle = "display:none";
                }
            }
            <div style="@strStyle">
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    @Html.ValidationMessage("CustomError")
                </div>
            </div>


        </div>


    </div>
    <div class="col-md-2"></div>
</div>











@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

